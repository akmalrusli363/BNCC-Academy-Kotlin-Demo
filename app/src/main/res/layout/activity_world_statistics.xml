<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/indigo2"
        android:orientation="vertical"
        tools:context=".siagacovid.worldstats.WorldStatisticsActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llStatsBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <TextView
                android:id="@+id/tvWorldStatistics"
                style="@style/h4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worldwide_stats"
                android:textAlignment="center"
                android:textColor="@color/colorAccentLight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/ivReturnIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_haptic_image"
                android:contentDescription="@string/back_to_overview"
                android:src="?attr/actionModeCloseDrawable"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/colorAccentLight" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/vSeparator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/muteGray" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/indigo2"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/clWorldCaseCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/shape_gray_round_box"
                android:backgroundTint="@color/indigo"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintBottom_toTopOf="@id/clCoronaCountBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvWorldTotalCount"
                    style="@style/h1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccentDark"
                    tools:text="5000000" />

                <TextView
                    android:id="@+id/worldTotalCount"
                    style="@style/b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccentDark"
                    tools:text="Total cases" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clCoronaCountBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clWorldCaseCount">

                <LinearLayout
                    android:id="@+id/llPositiveCaseCountBox"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:background="@drawable/shape_round_highlight_box"
                    android:backgroundTint="@color/confirmedColor"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ProgressBar
                        android:id="@+id/pbPositive"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminateTint="@color/white"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvPositiveCaseCount"
                        style="@style/h5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/loading"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccentDark"
                        tools:text="3697700" />

                    <TextView
                        android:id="@+id/tvPositiveCountLabel"
                        style="@style/b2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/positive"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccentDark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRecoveredCountBox"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:background="@drawable/shape_round_highlight_box"
                    android:backgroundTint="@color/recoveredColor"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/llDeathCountBox"
                    app:layout_constraintStart_toEndOf="@id/llPositiveCaseCountBox"
                    app:layout_constraintTop_toTopOf="parent">

                    <ProgressBar
                        android:id="@+id/pbRecovered"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminateTint="@color/white"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvRecoveredCount"
                        style="@style/h5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/loading"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccentDark"
                        tools:text="4510100" />

                    <TextView
                        android:id="@+id/tvRecoveredCountLabel"
                        style="@style/b2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/recovered"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccentDark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDeathCountBox"
                    android:layout_width="110dp"
                    android:layout_height="80dp"
                    android:background="@drawable/shape_round_highlight_box"
                    android:backgroundTint="@color/deathColor"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ProgressBar
                        android:id="@+id/pbDeath"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminateTint="@color/white"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvDeathCount"
                        style="@style/h5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="@string/loading"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccentDark"
                        tools:text="414300" />

                    <TextView
                        android:id="@+id/tvDeathCountLabel"
                        style="@style/b2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/death"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccentDark" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <include layout="@layout/bottom_sheet_country_lookup" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
