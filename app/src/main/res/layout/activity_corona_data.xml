<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:paddingTop="16dp"
    tools:context=".CoronaData">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:text="@string/region_indonesia"
            android:textAlignment="center"
            android:textColor="@color/colorAccentDark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/informationIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/region_info_icon"
            android:src="@android:drawable/ic_dialog_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toEndOf="@+id/region"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp">

        <TextView
            android:id="@+id/totalCaseCountHighlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:text="86521"
            android:textAlignment="center"
            android:textColor="@color/colorAccentDark"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/coronavatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/totalCaseCountHighlightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_cases"
            android:textAlignment="center"
            android:textColor="@color/colorAccentDark"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/coronavatar"
            app:layout_constraintTop_toBottomOf="@+id/totalCaseCountHighlight"
            app:layout_constraintVertical_bias="0.2" />

        <ImageView
            android:id="@+id/coronavatar"
            android:layout_width="160dp"
            android:layout_height="144dp"
            android:contentDescription="@string/corona_vector"
            android:src="@drawable/virus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/virus" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:background="@drawable/round_box_roll"
                android:orientation="vertical"

                android:paddingHorizontal="20dp"
                android:paddingTop="24dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/CoronaCountBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="6dp"
                    android:paddingVertical="12dp">

                    <LinearLayout
                        android:id="@+id/confirmedCountBox"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/round_highlight"
                        android:backgroundTint="@color/confirmedColor"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/recoveredCountBox"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/confirmedCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/rubik_bold"
                            android:text="36977"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/confirmedCountLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/positive"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/recoveredCountBox"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/round_highlight"
                        android:backgroundTint="@color/recoveredColor"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/deathCountBox"
                        app:layout_constraintStart_toEndOf="@id/confirmedCountBox"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/recoveredCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/rubik_bold"
                            android:text="45101"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recoveredCountLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/recovered"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deathCountBox"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/round_highlight"
                        android:backgroundTint="@color/deathColor"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/recoveredCountBox"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/deathCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/rubik_bold"
                            android:text="4143"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/deathCountLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/death"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="14sp" />
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/knowMoreLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_bold"
                    android:paddingVertical="12dp"
                    android:text="@string/learn_more_covid19"
                    android:textColor="@color/indigo2"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lookupButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:background="@drawable/gray_round_btn"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="20dp">

                    <ImageView
                        android:id="@+id/metaIcon1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/lookup_icon"
                        android:src="@drawable/location_pin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/location_pin"
                        tools:layout_marginHorizontal="12dp" />

                    <TextView
                        android:id="@+id/metaTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:fontFamily="@font/rubik_bold"
                        android:text="@string/lookup"
                        android:textColor="@color/indigo2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/metaDescription1"
                        app:layout_constraintEnd_toStartOf="@id/gotoArrow1"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/metaIcon1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/metaDescription1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="@string/lookup_description"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/gotoArrow1"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@id/metaIcon1"
                        app:layout_constraintTop_toBottomOf="@id/metaTitle1" />

                    <ImageView
                        android:id="@+id/gotoArrow1"
                        android:layout_width="32dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/right_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintStart_toEndOf="@id/metaIcon1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/indigo2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:background="@drawable/gray_round_btn"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/metaIcon2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/hotline_icon"
                        android:src="@drawable/siren"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/siren"
                        tools:layout_marginHorizontal="12dp" />

                    <TextView
                        android:id="@+id/metaTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:fontFamily="@font/rubik_bold"
                        android:text="@string/hotline"
                        android:textColor="@color/indigo2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/metaDescription2"
                        app:layout_constraintEnd_toStartOf="@id/gotoArrow2"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/metaIcon2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/metaDescription2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="@string/hotline_description"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/gotoArrow2"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toEndOf="@id/metaIcon2"
                        app:layout_constraintTop_toBottomOf="@id/metaTitle2" />


                    <ImageView
                        android:id="@+id/gotoArrow2"
                        android:layout_width="32dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/right_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintStart_toEndOf="@id/metaIcon2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/indigo2" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>