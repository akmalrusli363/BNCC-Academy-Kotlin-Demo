                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/confirmedCount3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/rubik_bold"
                            android:text="36977"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/recoveredCountBox3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ring_highlight"
                        android:backgroundTint="@color/recoveredColor"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/deathCountBox3"
                        app:layout_constraintStart_toEndOf="@id/confirmedCountBox3"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/recoveredCount3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/rubik_bold"
                            android:text="36977"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccentDark"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deathCountBox3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ring_highlight"
                        android:backgroundTint="@color/deathColor"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
